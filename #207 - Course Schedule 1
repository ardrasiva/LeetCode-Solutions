class Solution(object):
    def canFinish(self, numCourses, prerequisites):
        """
        :type numCourses: int
        :type prerequisites: List[List[int]]
        :rtype: bool
        """
        prelist = {i: [] for i in range(numCourses)}
        for course,prereq in prerequisites:
            prelist[course].append(prereq)
        
        visited = set()

        def DFS(course):
            if course in visited:
                return False 
            if prelist[course] == []:
                return True
            visited.add(course)

            for prereq in prelist[course]:
                if not DFS(prereq):
                    return False
            visited.remove(course)

            prelist[course] = []
            return True
        for course in range(numCourses):
            if not DFS(course):
                return False
        return True
